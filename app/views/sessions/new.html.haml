#header-login
#wmsb-logo
= simple_form_for @session, url: '/login', html: { id: 'login' } do |f|
  = f.input :family_name
  = f.input :student_number, type: 'number'
  = f.input :date_of_birth, as: :date, start_year: 18.years.ago.year, end_year: 5.years.ago.year, order: [:month, :day, :year], include_blank: true
  = f.button :submit, value: 'Sign In'
