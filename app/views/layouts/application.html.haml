%html
  %head
    %title Where's My School Bus
    %link{:href => 'https://fonts.googleapis.com/css?family=Enriqueta:400,700', :rel => 'stylesheet', :type => 'text/css'}
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

    %script{ src: "https://maps.googleapis.com/maps/api/js?key=#{ENV['GOOGLE_MAPS_KEY']}&sensor=false", type: 'text/javascript' }

  %body
    .notifications
      = notice || alert
      Oops, your login information was incorrect. Please try again.
      %a.icon-cancel-circle
    = yield
